{
  "name": "teachflow",
  "displayName": "TeachFlow",
  "publisher": "TeachFlow",
  "description": "",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.96.0"
  },
    "repository": {
    "type": "git",
    "url": "https://github.com/Signorlupo22/teachflowExtension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "teachflow.startsession",
        "title": "Start Session",
        "category": "Teachflow"
        
      },
      {
        "command": "teachflow.sendTestMessage",
        "title": "Send Message",
        "category": "Teachflow"
      },
      {
        "command": "teachflow.toggleAutoStart",
        "title": "Toggle Auto Start",
        "category": "Teachflow"
      }
    ],
    "configuration": {
      "title": "Teachflow",
      "properties": {
        "teachflow.autoStartSession": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto-start of the WebSocket session when the extension is activated."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "debug": "vscode-test --debugBrk"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}
